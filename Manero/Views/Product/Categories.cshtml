@{
    ViewData["Title"] = "Categories";
}
<div class="filter-sidebar">
    <partial name="~/Views/Partials/_ProductFilter.cshtml" />
</div>
<div class="sorting-container">
    <div class="filter-element"> <i class="fa-solid fa-filter"></i>Filters</div>
    @if (ViewBag.ChosenCategory != null)
    {
        <h1>Shop</h1>
    } else
    {
        <h1>Categories</h1>        
    }
    <div>Sorting by <i class="fa-solid fa-caret-down"></i></div>
</div>
<section class="category-section">
    <div class="categories-div-top">
        @if (ViewBag.ShopWithAllCategories != null)
        {
            @foreach (var item in ViewBag.ShopWithAllCategories)
            {
                if (ViewBag.ChosenCategory != null && ViewBag.ChosenCategory.ToLower() == item.CategoryName.ToLower())
                {
                    <a disabled id="chosen-category" >
                        <span>@item.CategoryName</span>
                    </a>
                }
                else
                {
                    <a asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                        <span>@item.CategoryName</span>
                    </a>                    
                }
            }
        }
    </div>
    @if (ViewBag.CategoryProducts == null)
    {
        <div class="no-categories-chosen-div">
            @if (ViewBag.ShopWithAllCategories != null)
            {
             
                @foreach (var item in ViewBag.ShopWithAllCategories)
                {
                    if (item.CategoryName.ToLower() == "kids")
                    {
                        <a class="video-container-kids" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-kids" >
                                <source src="~/videos/pexels-kids.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else if (item.CategoryName.ToLower() == "women")
                    {
                        <a class="video-container-woman" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-woman" >
                                <source src="~/videos/pexels-woman-clothes.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else if (item.CategoryName.ToLower() == "men")
                    {
                        <a class="video-container-men" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-men">
                                <source src="~/videos/pexels-men-clothes.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else if (item.CategoryName.ToLower() == "sport")
                    {
                        <a class="video-container-sport" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-sport">
                                <source src="~/videos/pexels-sport.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else if (item.CategoryName.ToLower() == "bag")
                    {
                        <a class="video-container-bag" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-bag">
                                <source src="~/videos/pexels-bags.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else if (item.CategoryName.ToLower() == "accessories")
                    {
                        <a class="video-container-hat" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-hat" >
                                <source src="~/videos/pexels-hat.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else if (item.CategoryName.ToLower() == "shoes")
                    {
                        <a class="video-container-shoes" asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                            <video id="myVideo-shoes" >
                                <source src="~/videos/pexels-shoes.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="product" asp-action="categories" asp-route-categoryName="@item.CategoryName">
                            <span>@item.CategoryName</span>
                        </a>

                    }
                }
            }
        </div>        
    }
    <section class="products-section">
        <div class="container">
            <div class="product-items">
                @if (ViewBag.CategoryProducts != null)
                {
                    @foreach (var item in ViewBag.CategoryProducts)
                    {
                        <partial name="~/Views/Partials/_ProductItem.cshtml" model="item" />
                    }
                }
            </div>
        </div>
    </section>
</section>

<script src="~/js/handleVidoes.js"></script>