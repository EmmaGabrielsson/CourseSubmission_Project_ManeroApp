@model ResetPasswordViewModel

@{
    Layout = "_LayoutNoNav";
}

<div class="hidden-top-nav">
    <partial name="/Views/Partials/_NavigationTopPartial.cshtml" />
</div>

<div class="reset-password-section">
    <header>
        <i class="fa-solid fa-angle-left" id="back-icon"></i>
        <h1>Reset password</h1>
    </header>
    <p>Enter new password and confirm.</p>
    <div class="reset-password">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="form-input">
                <label asp-for="Password" class="form-label">NEW PASSWORD</label>
                <input asp-for="Password" class="input" type="password" id="newpassword" /><br /><br />
                <small><span asp-validation-for="Password"></span></small>
            </div>
            <div class="form-input">
                <label asp-for="ConfirmPassword" class="form-label">CONFIRM PASSWORD</label>
                <input asp-for="ConfirmPassword" class="input" type="password" id="password" /><br /><br />
                <small><span asp-validation-for="ConfirmPassword"></span></small>
            </div>
            <button type="submit">CHANGE PASSWORD</button>
        </form>
    </div>
</div>

<div class="hidden-bottom-nav">
    <partial name="/Views/Partials/_NavigationBottomPartial.cshtml" />
</div>
<div class="hidden-footer">
    <partial name="/Views/Partials/_FooterBigScreenPartial.cshtml" />
</div>